<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/albumArt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/albumTitulo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/albumArt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="17dp"
        android:maxLines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/albumArtista"
        android:textSize="15dp"
        android:layout_below="@+id/albumTitulo"
        android:layout_toRightOf="@+id/albumArt"
        android:layout_toEndOf="@+id/albumArt"
        android:maxWidth="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/albumTracks"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:layout_alignTop="@+id/albumArtista"
        android:layout_toRightOf="@+id/albumArtista"
        android:layout_toEndOf="@+id/albumArtista"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp" />
</RelativeLayout>
